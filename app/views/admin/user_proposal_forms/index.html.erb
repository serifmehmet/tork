<div class="container-fluid">
				<!-- BEGIN PAGE HEADER-->
				<div class="row-fluid">
					<div class="span12">
						<!-- BEGIN STYLE CUSTOMIZER-->
						
						<!-- END STYLE CUSTOMIZER-->    
						<!-- BEGIN PAGE TITLE & BREADCRUMB-->		
						<h3 class="page-title">
							Teklifler
							
						</h3>
						
						<!-- END PAGE TITLE & BREADCRUMB-->
					</div>
				</div>
				<!-- END PAGE HEADER-->
				<!-- BEGIN PAGE CONTENT-->


				<div id="page" class="dashboard">
					<div class="row-fluid">
						<div class="span12">
							<!-- BEGIN EXAMPLE TABLE PORTLET-->
							<div class="widget">
								<div class="widget-title">
									<h4><i class="icon-reorder"></i>Teklif Formları</h4>
									<span class="tools">
									
									</span>							
								</div>
								<div class="widget-body">
									
									
									
									<table class="table table-striped table-bordered" id="sample_1">
										<thead>
											<tr>
												
												<th>Adı - Soyadı</th>
												<th>E-Posta</th>
												<th>Adres</th>
												<th>Telefon No</th>
												<th>İstek</th>
												<th>Verilen Teklif</th>
												<th>Kabul Edildi mi?</th>
												<th>İşlemler</th>
											</tr>
										</thead>
										<tbody>
											<!-- Kullanıcılar Listesini alıyoruz -->
											<% @proposal_forms.each do |proposal_form| %>
												<tr class="odd gradeX">
													
													<td class="hidden-phone"><%= proposal_form.full_name %></td>
													<td class="hidden-phone"><%= proposal_form.email %></td>
													<td class="hidden-phone"><%= proposal_form.address %></td>
													<td class="hidden-phone"><%= proposal_form.phone_number %></td>
													<td class="hidden-phone"><%= proposal_form.care_operation %></td>
													<td class="hidden-phone"><%= proposal_form.given_cost %></td>
													<td class="hidden-phone"><%= proposal_form.is_accepted %></td>
													
													<td class="center">
														<%= link_to edit_admin_user_proposal_forms_path(proposal_form.id), :class => 'icon huge' do %>
															<i class="fa fa-pencil fa-fw"></i>
														<% end %>
														<%= link_to admin_delete_user_proposal_path(proposal_form.id), :class => 'icon huge' do %>
															<i class="fa fa-remove fa-fw"></i>
														<% end %>
														
													</td>
												</tr>
											<% end %>
											<!-- Kullanıcılar listesi alındı -->
											
										</tbody>
									</table>
								</div>
							</div>
							<!-- END EXAMPLE TABLE PORTLET-->
						</div>
					</div>
					
				</div>
				<!-- END PAGE CONTENT-->
			</div>