<div class="container-fluid">
				<!-- BEGIN PAGE HEADER-->
				<div class="row-fluid">
					<div class="span12">
						<!-- BEGIN STYLE CUSTOMIZER-->
						
						<!-- END STYLE CUSTOMIZER-->    
						<!-- BEGIN PAGE TITLE & BREADCRUMB-->		
						<h3 class="page-title">
							Hizmetler
							
						</h3>
						
						<!-- END PAGE TITLE & BREADCRUMB-->
					</div>
				</div>
				<!-- END PAGE HEADER-->
				<!-- BEGIN PAGE CONTENT-->


				<div id="page" class="dashboard">
					<div class="row-fluid">
						<div class="span12">
							<!-- BEGIN EXAMPLE TABLE PORTLET-->
							<div class="widget">
								<div class="widget-title">
									<h4><i class="icon-reorder"></i>Hizmetler Listesi</h4>
									<span class="tools">
									
									</span>							
								</div>
								<div class="widget-body">
									
									<%= link_to "Hizmet Ekle", { action: "new" }, :class => "btn btn-warning add-button" %>
									
									<br />
									
									<table class="table table-striped table-bordered" id="sample_1">
										<thead>
											<tr>
												
												<th>Hizmet Adı</th>
												<!-- <th>Hizmet Açıklaması</th> -->
												<th>Anahtar Kelimeler</th>
												<th>İşlemler</th>
											</tr>
										</thead>
										<tbody>
											<!-- Kullanıcılar Listesini alıyoruz -->
											<% @services.each do |service| %>
												<tr class="odd gradeX">
													
													<td class="hidden-phone"><%= service.service_name %></td>
													<!-- <td class="hidden-phone"><%= service.service_description %></td> -->
													<td class="hidden-phone"><%= service.meta_keywords %></td>
													
													<td class="center">
														<%= link_to edit_admin_service_path(service.id), :class => 'icon huge' do %>
															<i class="fa fa-pencil fa-fw"></i>
														<% end %>
														<%= link_to admin_delete_service_path(service.id), :class => 'icon huge' do %>
															<i class="fa fa-remove fa-fw"></i>
														<% end %>
														
													</td>
												</tr>
											<% end %>
											<!-- Kullanıcılar listesi alındı -->
											
										</tbody>
									</table>
								</div>
							</div>
							<!-- END EXAMPLE TABLE PORTLET-->
						</div>
					</div>
					
				</div>
				<!-- END PAGE CONTENT-->
			</div>