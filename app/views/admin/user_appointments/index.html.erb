<div class="container-fluid">
				<!-- BEGIN PAGE HEADER-->
				<div class="row-fluid">
					<div class="span12">
						<!-- BEGIN STYLE CUSTOMIZER-->
						
						<!-- END STYLE CUSTOMIZER-->    
						<!-- BEGIN PAGE TITLE & BREADCRUMB-->		
						<h3 class="page-title">
							Randevular
							
						</h3>
						
						<!-- END PAGE TITLE & BREADCRUMB-->
					</div>
				</div>
				<!-- END PAGE HEADER-->
				<!-- BEGIN PAGE CONTENT-->


				<div id="page" class="dashboard">
					<div class="row-fluid">
						<div class="span12">
							<!-- BEGIN EXAMPLE TABLE PORTLET-->
							<div class="widget">
								<div class="widget-title">
									<h4><i class="icon-reorder"></i>Randevular</h4>
									<span class="tools">
									
									</span>							
								</div>
								<div class="widget-body">
									
									
									
									<table class="table table-striped table-bordered" id="sample_1">
										<thead>
											<tr>
												
												<th>Adı - Soyadı</th>
												<th>E-Posta</th>
												<th>Adres</th>
												<th>Telefon No</th>
												
												<th>Markası</th>
												<th>Modeli</th>
												<th>İstek</th>
												<th>İşlemler</th>
											</tr>
										</thead>
										<tbody>
											<!-- Kullanıcılar Listesini alıyoruz -->
											<% @user_appointments.each do |user_appointment| %>
												<tr class="odd gradeX">
													
													<td class="hidden-phone"><%= user_appointment.full_name %></td>
													<td class="hidden-phone"><%= user_appointment.email %></td>
													<td class="hidden-phone"><%= user_appointment.address %></td>
													<td class="hidden-phone"><%= user_appointment.phone_number %></td>
													
													<td class="hidden-phone"><%= user_appointment.brand.brand_name %></td>
													<td class="hidden-phone"><%= user_appointment.brand_make.make_name %></td>
													<td class="hidden-phone"><%= user_appointment.care_operation %></td>
													<td class="center">
														<%= link_to edit_admin_user_appointment_path(make_type.id), :class => 'icon huge' do %>
															<i class="fa fa-pencil fa-fw"></i>
														<% end %>
														<%= link_to admin_delete_user_appointment_path(make_type.id), :class => 'icon huge' do %>
															<i class="fa fa-remove fa-fw"></i>
														<% end %>
														
													</td>
												</tr>
											<% end %>
											<!-- Kullanıcılar listesi alındı -->
											
										</tbody>
									</table>
								</div>
							</div>
							<!-- END EXAMPLE TABLE PORTLET-->
						</div>
					</div>
					
				</div>
				<!-- END PAGE CONTENT-->
			</div>