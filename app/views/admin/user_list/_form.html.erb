<div class="control-group">
   <!-- <label class="control-label" for="input1">Adı</label> -->
   <div class="controls">
      <%= f.input :first_name, input_html: { class: "span6", id: "input1"}, label: "Adı" %>
   </div>
</div>
<div class="control-group">
   <!-- <label class="control-label" for="input2">Soyadı</label> -->
   <div class="controls">
      <%= f.input :last_name, input_html: { class: "span6", id: "input2"}, label: "Soyadı" %>
   </div>
</div>
<div class="control-group">
   <!-- <label class="control-label" for="inputRemarks">Adres</label> -->
   <div class="controls">
      <%= f.input :address, input_html: { class: "span6", id: "inputRemarks", rows: "3"}, as: :text, label: "Adres" %>
      
   </div>
</div>
<div class="control-group">
   <label class="control-label" for="input7">E-Posta Adresi</label>
   <div class="controls">
      <div class="input-prepend">
         <span class="add-on">@</span><%= f.input :email, input_html: { class: "input-medium", id: "input3"}, label: false, placeholder: "E-Posta Adresi", wrapper: false %>
         
      </div>
   </div>
</div>
<div class="control-group">
   <label class="control-label" >Admin?</label>
   <div class="controls">
      <label class="checkbox">
      <%= f.input :is_admin, label: false %>
      </label>
   </div>
</div>                             

<div class="control-group">
   <label class="control-label" for="inputRemarks">Kullanıcı Adı</label>
   <div class="controls">
      <%= f.input :username, input_html: {class: "span6", id: "input4"}, label: false %>
      
   </div>
</div>

<div class="control-group">
   <label class="control-label" for="inputRemarks">Şifre</label>
   <div class="controls">
      <%= f.input :password, input_html: {class: 'span6', id: 'input5'}, label: false %>
      
   </div>
</div>

<div class="control-group">
   <label class="control-label" for="inputRemarks">Şifre Tekrar</label>
   <div class="controls">
      <%= f.input :password_confirmation, input_html: {class: 'span6', id: 'input6'}, label: false %>
   </div>
</div>

<div class="form-actions">
  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
     Kaydet
  <% end %>
   
   
   <!-- <button type="button" class="btn">Cancel</button> -->
</div>

